      },
      {
        "url": "https://images.unsplash.com/photo-1618371690240-e0d46eead4b8?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NjAzMjd8MHwxfHNlYXJjaHw0fHxjb3Jwb3JhdGUlMjBoZWFkc2hvdCUyMHByb2Zlc3Npb25hbCUyMGRhcmslMjBiYWNrZ3JvdW5kfGVufDB8fHx8MTc3MDcxOTgwOHww&ixlib=rb-4.1.0&q=85",
        "category": "Signal Source - Crypto Whale"
      }
    ],
    "backgrounds": [
      {
        "url": "https://images.pexels.com/photos/6203470/pexels-photo-6203470.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940",
        "category": "Login Background"
      }
    ]
  },
  "instructions_to_main_agent": [
    "Install 'lucide-react' and 'recharts' immediately.",
    "Add 'Barlow Condensed' and 'Manrope' from Google Fonts in index.html or import in CSS.",
    "Force DARK MODE: Add 'dark' class to the root HTML element or body. Do not implement a light mode toggle.",
    "Override Shadcn 'card' background to '#18181b' and 'border' to '#27272a' in tailwind.config.js.",
    "Use 'recharts' for all charts. Style them with 'Tooltip' using a custom dark contentStyle.",
    "Ensure all numbers (prices, percentages) use the 'JetBrains Mono' font family.",
    "Implement the 'Tracing Beam' effect on the highest probability signal card using a simple CSS animation or framer-motion if available.",
    "Use 'sonner' for all trade notifications (Success/Error)."
  ],
  "UNIVERSAL_GUIDELINES": {
    "do_not_use": [
      "Gradients on text",
      "Rounded corners > 12px (Keep it sharp, max 8px or 4px)",
      "Light mode components",
      "Serif fonts"
    ],
    "must_use": [
      "data-testid on all interactive elements",
      "Tailwind 'space-y' or 'gap' for spacing (no margins on children)",
      "High contrast text for accessibility"
    ]
  }
}