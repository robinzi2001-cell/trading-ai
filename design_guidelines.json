{
  "project_name": "Trading KI",
  "theme": "dark",
  "design_philosophy": {
    "identity": "The Performance Pro",
    "core_principles": [
      "Information Density over Whitespace",
      "Precision over Decoration",
      "Dark Mode Mandatory",
      "Functionality is Beauty"
    ],
    "mood": "Elite, Athletic, High-Frequency, Trusted"
  },
  "typography": {
    "font_family": {
      "heading": "Barlow Condensed, sans-serif",
      "body": "Manrope, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "scale": {
      "h1": "text-4xl font-bold tracking-tight uppercase",
      "h2": "text-2xl font-semibold tracking-tight uppercase",
      "h3": "text-xl font-medium tracking-normal",
      "body": "text-sm leading-relaxed",
      "small": "text-xs text-muted-foreground",
      "mono_lg": "font-mono text-lg tracking-tight",
      "mono_sm": "font-mono text-xs tracking-wide"
    }
  },
  "colors": {
    "palette": {
      "background": "#09090b",
      "surface": "#18181b",
      "surface_highlight": "#27272a",
      "border": "#27272a",
      "primary": "#FFFFFF",
      "secondary": "#a1a1aa",
      "accent_success": "#22c55e",
      "accent_danger": "#ef4444",
      "accent_brand": "#3b82f6",
      "accent_warning": "#f59e0b"
    },
    "usage": {
      "body_bg": "bg-[#09090b]",
      "card_bg": "bg-[#18181b]",
      "text_primary": "text-white",
      "text_secondary": "text-zinc-400",
      "border_subtle": "border-zinc-800",
      "profit_text": "text-emerald-500",
      "loss_text": "text-red-500",
      "active_element": "ring-1 ring-blue-500 bg-blue-500/10"
    }
  },
  "visual_enhancers": {
    "glassmorphism": {
      "header": "bg-black/40 backdrop-blur-xl border-b border-white/10",
      "overlay": "bg-black/60 backdrop-blur-md"
    },
    "borders": {
      "default": "border border-white/10",
      "active": "border border-blue-500/50 shadow-[0_0_15px_-3px_rgba(59,130,246,0.3)]",
      "glow": "shadow-[0_0_20px_-5px_rgba(255,255,255,0.1)]"
    },
    "micro_interactions": {
      "hover_lift": "hover:-translate-y-[1px] transition-transform duration-200",
      "button_press": "active:scale-95 transition-transform duration-100"
    }
  },
  "layout": {
    "grid_system": "grid grid-cols-1 md:grid-cols-12 gap-4 p-4",
    "sidebar": "w-64 fixed h-screen border-r border-white/10 bg-[#09090b] hidden md:block",
    "main_content": "md:pl-64 min-h-screen bg-[#09090b]",
    "container_padding": "p-4 md:p-6 lg:p-8"
  },
  "components": {
    "SignalCard": {
      "description": "High-priority trading signal card with tracing beam effect",
      "structure": "Card root relative overflow-hidden group hover:border-blue-500/50 transition-colors",
      "features": ["Risk score badge", "Source avatar", "Action buttons (Execute/Dismiss)"]
    },
    "TradePanel": {
      "description": "Dense form for manual trade execution",
      "structure": "Grid layout with input groups for entry, stop loss, take profit",
      "features": ["Calculated risk display", "Leverage slider", "One-click execution"]
    },
    "MetricWidget": {
      "description": "Small stat card for portfolio overview",
      "structure": "Flex row justify-between items-center p-4 bg-zinc-900/50 border border-white/5",
      "features": ["Label", "Value (Mono font)", "Trend indicator (Icon + %)"]
    },
    "DataTable": {
      "description": "High-density table for history and active trades",
      "structure": "Shadcn Table with compact padding (py-2)",
      "features": ["Sticky header", "Row hover highlight", "Status badges"]
    }
  },
  "image_urls": {
    "avatars": [
      {
